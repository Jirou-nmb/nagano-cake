<div class="body">
  <div class="container">
    <h2>配送先編集</h2>
    
    <% if @address.errors.any? %>
     <div id="error_explanation">
       <h2>入力漏れがあります。</h2>

       <ul>
         <% @address.errors.full_messages.each do |message| %>
           <li><%= message %></li>
         <% end %>
       </ul>
     </div>
    <% end %>

    <%= form_with(model: @address, url: address_path(@address)) do |f| %>
      <div class="field">
        <%= f.label :郵便番号（ハイフンなし） %>
        <br>
        <%= f.text_field :postal_code %>
      </div>

      <div class="field">
        <%= f.label :住所 %>
        <br>
        <%= f.text_field :address %>
      </div>

      <div class="field">
        <%= f.label :宛名 %>
        <br>
        <%= f.text_field :name %>
      </div>

      <br>

      <div class="actions">
        <%= f.submit '変更を保存する', class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>