<div class="body">
  <div class="container">
    <h2>配送先登録/一覧</h2>

    <%= form_with model:@address, local: true do |f| %>
      <div class="field">
        <%= f.label :郵便番号（ハイフンなし） %>
        <br>
        <%= f.text_field :postal_code %>
      </div>

      <br>

      <div class="field">
        <%= f.label :住所 %>
        <br>
        <%= f.text_field :address %>
      </div>

      <br>

      <div class="field">
        <%= f.label :宛名 %>
        <br>
        <%= f.text_field :name %>
      </div>

      <br>

      <div class="actions">
        <%= f.submit '登録する' %>
      </div>
    <% end %>
    
    <br>

    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
        </tr>
      </thead>
      <tbody>
        <% @addresses.each do |address| %>
          <tr>
            <td>
              <%= address.postal_code %>
            </td>
            <td>
              <%= address.address %>
            </td>
            <td>
              <%= address.name %>
            </td>
            <td>
              <%= link_to "編集する", "addresses/#{address.id}/edit", class: "btn-sm btn-success" %>
            </td>
            <td>
              <%= link_to "削除する", address, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>
