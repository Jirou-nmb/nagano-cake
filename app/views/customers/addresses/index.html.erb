<div class="body">
  <div class="container">
    <h2>配送先</h2>
    <%= form_with(model: @address, url: addresses_path(@address)) do |f| %>
      <div class="field">
        <%= f.label :郵便番号（ハイフンなし） %>
        <br>
        <%= f.text_field :postal_code %>
      </div>

      <br>

      <div class="field">
        <%= f.label :住所 %>
        <br>
        <%= f.text_field :address %>
      </div>

      <br>

      <div class="field">
        <%= f.label :宛名 %>
        <br>
        <%= f.text_field :name %>
      </div>

      <br>

      <div class="actions">
        <%= f.submit '登録する' %>
      </div>
    <% end %>
  </div>
</div>
