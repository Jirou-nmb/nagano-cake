<div class="container">
  <div class-"row">
    <div class="col-md-2">
      <div class="list-group">
        <h4>ジャンル検索</h3>
        <% @genres.each do |genre| %>
        <li style="font-size: 20px;">
          <%= link_to genre.name, sort_items_path(genre_id: genre.id) %>
        </li>
        <% end %>
      </div>
    </div>
    <div class="col-md-10">
      <h3><%= @genre.name  %>一覧(全<%= @items.count %>件)</h3>
      <div class="row">
        <div class="col-md-3">
          <% @items.each do |item| %>
            <%= link_to item_path(item) do %>
              <%= attachment_image_tag item, :image, format: 'jpeg', width: "100%", height: "200px", fallback: "no_image.jpg" %>
            <% end %>
            <div class="list-group" style="list-style: none;">
              <li><%= item.name %></li>
              <li><%= (item.price * 1.1).round %></li>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>