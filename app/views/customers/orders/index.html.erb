<div class="container">
   <h3>注文履歴一覧</h3>
 <div class="row">
  <table class="table table-bordered table-condensed">
　
   <tr>
     <th>注文日</th>
     <th>配送先</th>
     <th>注文商品</th>
     <th>支払金額</th>
     <th>ステータス</th>
     <th>注文詳細</th>
   </tr>
   
    <% @orders.each do |order| %>
     <tr>
       <td scope="row"><%= order.created_at.strftime('%Y/%m/%d') %></td>
        <td scope="row">
          <%= order.postal_code %><br>
          <%= order.address %><br>
          <%= order.name %>
        </td>
        <td scope="row">
          <% order.order_details.each do |order_detail| %>
          <%= order_detail.item.name %><br>
          <% end %>
        </td>
        <td scope="row">
          <%= order.total_payment.to_s(:delimited) %>円
        </td>
        <td scope="row">
          <%= order.status %>
        </td>
        <td scope="row">
          <%= link_to "注文詳細", order_path(order), class: "glyphicon glyphicon-list-alt btn btn-success" %>
        </td>
      </tr>
    <% end %>
   </table>
  </div>
 </div>