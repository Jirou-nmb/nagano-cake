<div class="body">
  <div class="container">
    <%= form_with model: @order, url: confirm_orders_path, method: :post,local: true do |f| %>
      <h2>支払い方法</h2>
      <br>
      <%= f.radio_button :payment_method,:クレジットカード,  checked: "checked" %>
      <%= f.label :payment_method, "クレジットカード" %>
      <br>
      <%= f.radio_button :payment_method, :銀行振込 %>
      <%= f.label :payment_method, "銀行振込" %>
      <br>
      <br>
      <br>

      <h2>お届け先</h2>
      <br>

      <%= f.radio_button :address_option, 0, checked: "checked" %>
      <%= f.label :address, "ご自身の住所" %>
      <%= '〒' + @customer.postal_code %>
      <%= @customer.address %>
      <%= @customer.full_name %>
      <br>
      <%= f.radio_button :address_option, 1 %>
      <%= f.label :address, "登録済住所から選択" %>
      <%= f.collection_select :address_id , @addresses, :id, :shipping_info, :include_blank => "選択してください" %>
      <br>
      <%= f.radio_button :address_option, 2 %>
      <%= f.label :address, "新しいお届け先" %>

      <br>
      <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
      <%= text_field_tag 'address[postal_code]' %>
      <br>

      <%= f.label :address, "住所" %>
      <%= text_field_tag 'address[address]' %>
      <br>

      <%= f.label :name, "宛名" %>
      <%= text_field_tag 'address[name]' %>

      <br>

      <%= f.submit "確認画面へ進む" , class:"btn btn-primary" %>

    <% end %>
  </div>
</div>