<div class="container">

  <div class="row">
    <h3 class"shopping_cart">ショッピンングカート</h3>
    
    <table>
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    
     <% @cart_items.each do |cart_item| %>
      <tr>
         <th>
           	<%= attachment_image_tag(cart_item.item, :image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
           	<%= cart_item.item.name %>
         </th>
         <th>
            <%= cart_item.item.price %>
         </th>
         <th></th>
         <th></th>
         <th></th>
      </tr>
    </table>
    
    