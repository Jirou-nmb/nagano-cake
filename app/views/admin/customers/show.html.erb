<div class="body">
  <div class="container">
    <div class="row">

      <h2><%= current_customer.last_name + current_customer.first_name %>さんの会員詳細</h2>
      <br>
      <table class="table">
        <tbody>
          <tr>
            <th>顧客ID</th>
            <th>
              <%= @customer.id %>
              <% if @customer.is_deleted == false %>
                <p>有効会員</p>
              <% else %>
                <p>退会済み</p>
              <% end %>
            </th>
          </tr>
          <tr>
            <th>氏名</th>
            <th><%= @customer.last_name + "　" + @customer.first_name %></th>
          </tr>
          <tr>
            <th>フリガナ</th>
            <th><%= @customer.last_name_kana + "　" + @customer.first_name_kana %></th>
          </tr>
          <tr>
            <th>郵便番号</th>
            <th><%= @customer.postal_code %></th>
          </tr>
          <tr>
            <th>住所</th>
            <th><%= @customer.address %></th>
          </tr>
          <tr>
            <th>電話番号</th>
            <th><%= @customer.phone_number %></th>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <th><%= @customer.email %></th>
          </tr>
        </tbody>
      </table>
      <div>
        <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-primary" %>
      </div>
      <br>
      <div>
        <%= link_to "注文履歴一覧を見る", customer_index_admin_order_path(customer_id: @customer.id), class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>