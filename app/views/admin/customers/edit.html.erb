<div class="body">
  <div class="container">
    <h2><%= @customer.full_name %>さんの会員情報編集</h2>
    
    

    <%= form_with(model: @customer, url: admin_customer_path(@customer)) do |f| %>

      <div class="form-group">
        <%= f.label :名前 %>
        <br>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "性" %>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "名" %>
      </div>

      <div class="form-group">
        <%= f.label :フリガナ %>
        <br>
        <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", placeholder: "セイ" %>
        <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder: "メイ" %>
      </div>

      <div class="form-group">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email %>
      </div>

      <div class="form-group">
        <%= f.label :郵便番号 %>
        <br>
        <%= f.text_field :postal_code %>
      </div>

      <div class="form-group">
        <%= f.label :住所 %>
        <br>
        <%= f.text_field :address %>
      </div>

      <div class="form-group">
        <%= f.label :電話番号 %>
        <br>
        <%= f.text_field :phone_number %>
      </div>

      <br>

      <div class="form-group">
        <%= f.label :有効 %><%= f.radio_button :is_deleted, false %>
        <%= f.label :退会済み %><%= f.radio_button :is_deleted, true %>
      </div>

      <br>

      <div class="actions">
        <%= f.submit '変更を保存する', class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
