<div class="body">
  <div class="container">
    <div class="row">

      <h2>会員一覧</h2>
      <table class="table table-inverse">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td>
                <%= customer.id %>
              </td>
              <td>
                <%= link_to customer.last_name + customer.first_name, admin_customer_path(customer.id) %>
              </td>
              <td>
                <%= customer.email %>
              </td>
              <td>
                <% if customer.is_deleted == false %>
                  <p>有効会員</p>
                <% else %>
                  <p>退会済み</p>
                <% end %>
              </td>
            </tr>
          <% end %>
          <%= paginate @customers %>
        </tbody>
      </table>
    </div>
  </div>
</div>
