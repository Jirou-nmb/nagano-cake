<div class="container">
  <div class="row">
    <h2>今日の注文履歴一覧</h2>
    <div class="col-md-12">
      <table class="table">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order) %></td>
            <td><%= order.name %></td>
            <td>
              <% order_details = OrderDetail.where(order_id:[order.id]) %>
              <% count = 0 %>
              <% order_details.each do |order_detail| %>
                <% count += order_detail.amount %>
              <% end %>
              <%= count %>
            </td>
            <td><%= order.status %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <%= link_to '注文履歴一覧', admin_orders_path %>
  </div>
</div>