<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h3>ジャンル一覧・追加</h3>
    </div>
  </div>
  <!--ジャンル追加-->
  <div class="row">
    <div class="col-md-6">
      <%= form_with model:[:admin, @genre], local:true do |f| %>
      
        <!--エラー文-->
        <% if @genre.errors.any? %>
          <div class="alert alert-warning">
            <ul>
              <% @genre.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      
        <%= f.label :name, "ジャンル" %>
        <%= f.text_field :name %>
        
        <%= f.radio_button :is_active, true, checked: true %>
        <%= f.label :is_active, "有効" %>
        <%= f.radio_button :is_active, false %>
        <%= f.label :is_active, "無効" %>
        
        <%= f.submit "追加", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
  <br>
  
  <!--ジャンル一覧-->
  <div class="row">
    <div class="col-md-6">
      <table class="table">
        
        <thead>
          <tr>
            <th>ジャンル</th>
            <th>状態</th>
            <th></th>
          </tr>
        </thead>
        
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td>
              <% if genre.is_active == true %>
                <p>有効</p>
              <% else %>
                <p>無効</p>
              <% end %>
            </td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre), class: 'btn btn-primary' %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>