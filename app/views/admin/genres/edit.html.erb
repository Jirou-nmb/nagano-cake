<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h3>ジャンル編集</h3>
    </div>
  </div>
  <!--ジャンル追加-->
  <div class="row">
    <div class="col-md-6">
      <%= form_with model:[:admin, @genre], local:true do |f| %>
      
        <%= f.label :name, "ジャンル" %>
        <%= f.text_field :name %>
        
        <%= f.radio_button :is_active, true, checked: true %>
        <%= f.label :is_active, "有効" %>
        <%= f.radio_button :is_active, false %>
        <%= f.label :is_active, "無効" %>
        
        <%= f.submit "変更を保存する", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>